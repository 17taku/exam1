<div class="container">
    <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
        <p><%= notice %></p>
        <h1>ツイート一覧</h1>
          <%= link_to "ツイートする", new_tweet_path, class: 'btn btn-default' %>
        <% @tweets.each do |tweet| %>
            <div class="row">
              <p>ツイート：<%= tweet.content %></p>
              <%= link_to "編集", edit_tweet_path(tweet.id), class: 'btn btn-default btn-sm btn-success' %>
              <%= link_to "削除", tweet_path(tweet.id), data: { confirm: '本当に削除していいですか？'}, method: :delete, class:'btn btn-default btn-sm btn btn-danger' %>
            </div> 
        <% end %>
    </div>
</div>